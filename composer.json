{
    "name": "th3mouk/reactive-event-dispatcher",
    "description": "An immutable implementation of the PSR-14 (event-dispatcher) for ReactiveX PHP.",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "psr/container": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "reactivex/rxphp": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^9.1",
        "vimeo/psalm": "^3.11",
        "youdot/coding-standard": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy Marodon",
            "email": "marodon.jeremy@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Th3Mouk\\ReactiveEventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Th3Mouk\\ReactiveEventDispatcher\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "vimeo/psalm": "Immutability is ensured by Psalm only to remove some boilerplate"
    }
}
